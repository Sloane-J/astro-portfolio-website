  <main>
    <Hero client:load />
    <About client:load />
    <Skills client:load />
    <Projects client:load />
    <Services client:load />
    <Testimonials client:load />
    <Contact client:load />
  </main>
  <Footer client:load />
  <ScrollToTop client:load />
</Layout>

